# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# STRAPI BACKEND
# =============================================================================

# Generate secure keys with: openssl rand -base64 32
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret

# Database
DATABASE_NAME=carafe_strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=your-secure-db-password

# URLs
FRONTEND_URL=https://carafe.coffee
PUBLIC_URL=https://cms.carafe.coffee

# =============================================================================
# NUXT FRONTEND
# =============================================================================

NUXT_PUBLIC_SITE_URL=https://carafe.coffee
NUXT_PUBLIC_STRAPI_URL=https://cms.carafe.coffee

# Strapi API Token (create in Strapi admin → Settings → API Tokens)
STRAPI_API_TOKEN=your-strapi-api-token

# =============================================================================
# WORLDPAY PAYMENT
# =============================================================================

WORLDPAY_MERCHANT_CODE=your-merchant-code
WORLDPAY_XML_PASSWORD=your-xml-password
WORLDPAY_MAC_SECRET=your-mac-secret
WORLDPAY_ENV=live  # 'test' or 'live'

# =============================================================================
# OPTIONAL - EXTERNAL SERVICES
# =============================================================================

# AWS S3 for media storage
# AWS_ACCESS_KEY_ID=
# AWS_ACCESS_SECRET=
# AWS_REGION=eu-west-2
# AWS_BUCKET=carafe-media

# SMTP for emails
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM=noreply@carafe.coffee
# SMTP_REPLY_TO=hello@carafe.coffee

# Google Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
