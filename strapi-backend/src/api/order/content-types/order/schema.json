{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Orders",
    "description": "Customer orders from the shop"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "order_received",
        "packed",
        "shipped",
        "in_transit",
        "delivered",
        "cancelled",
        "refunded"
      ],
      "default": "order_received",
      "required": true
    },
    "customerEmail": {
      "type": "email",
      "required": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerPhone": {
      "type": "string"
    },
    "shippingAddress": {
      "type": "component",
      "repeatable": false,
      "component": "elements.address"
    },
    "billingAddress": {
      "type": "component",
      "repeatable": false,
      "component": "elements.address"
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "elements.order-item"
    },
    "subtotal": {
      "type": "decimal",
      "required": true
    },
    "shippingCost": {
      "type": "decimal",
      "default": 0
    },
    "tax": {
      "type": "decimal",
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": ["EUR", "GBP", "USD"],
      "default": "EUR"
    },
    "paymentMethod": {
      "type": "string"
    },
    "paymentId": {
      "type": "string"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": ["pending", "authorized", "captured", "failed", "refunded"],
      "default": "pending"
    },
    "worldpayOrderCode": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "orderTrackingToken": {
      "type": "string",
      "unique": true,
      "private": true
    },
    "shippingMethod": {
      "type": "string"
    },
    "carrier": {
      "type": "string"
    },
    "trackingNumber": {
      "type": "string"
    },
    "dispatchedAt": {
      "type": "datetime"
    },
    "deliveredAt": {
      "type": "datetime"
    },
    "isGuestOrder": {
      "type": "boolean",
      "default": false
    }
  }
}
