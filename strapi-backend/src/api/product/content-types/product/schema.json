{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Products",
    "description": "Coffee products for the shop"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 300
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "salePrice": {
      "type": "decimal",
      "min": 0
    },
    "currency": {
      "type": "enumeration",
      "enum": ["EUR", "GBP", "USD"],
      "default": "EUR"
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "weight": {
      "type": "integer"
    },
    "weightUnit": {
      "type": "enumeration",
      "enum": ["g", "kg"],
      "default": "g"
    },
    "stockQuantity": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "inStock": {
      "type": "boolean",
      "default": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "isTopSeller": {
      "type": "boolean",
      "default": false
    },
    "isNewArrival": {
      "type": "boolean",
      "default": false
    },
    "isLimitedEdition": {
      "type": "boolean",
      "default": false
    },
    "roastDate": {
      "type": "date"
    },
    "origin": {
      "type": "string"
    },
    "roastLevel": {
      "type": "enumeration",
      "enum": ["light", "medium-light", "medium", "medium-dark", "dark"]
    },
    "tastingNotes": {
      "type": "text"
    },
    "processingMethod": {
      "type": "string"
    },
    "altitude": {
      "type": "string"
    },
    "variety": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-category.product-category",
      "inversedBy": "products"
    },
    "relatedProducts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "productSchema": {
      "type": "component",
      "repeatable": false,
      "component": "shared.product-schema"
    }
  }
}
