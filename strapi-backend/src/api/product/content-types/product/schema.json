{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Products",
    "description": "Coffee products for the shop"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 300
    },
    "currency": {
      "type": "enumeration",
      "default": "GBP",
      "enum": [
        "EUR",
        "GBP",
        "USD"
      ]
    },
    "isTopSeller": {
      "type": "boolean",
      "default": false
    },
    "isLimitedEdition": {
      "type": "boolean",
      "default": false
    },
    "isWhatsNew": {
      "type": "boolean",
      "default": false
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "variants": {
      "type": "component",
      "component": "product.variant",
      "repeatable": true
    },
    "attributes": {
      "type": "component",
      "component": "product.attributes",
      "repeatable": false
    },
    "subscriptionOptions": {
      "type": "component",
      "component": "product.subscription-option",
      "repeatable": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-category.product-category",
      "inversedBy": "products"
    },
    "relatedProducts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::customer-review.customer-review",
      "mappedBy": "product"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    }
  }
}
