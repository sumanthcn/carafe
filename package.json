{
  "name": "carafe-coffee-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Carafe Coffee House & Roasters - Full Stack Application",
  "scripts": {
    "postinstall": "yarn install:backend && yarn install:frontend",
    "install:backend": "cd strapi-backend && yarn install",
    "install:frontend": "cd nuxt-frontend && yarn install",
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "cd strapi-backend && yarn build",
    "build:frontend": "cd nuxt-frontend && yarn build",
    "start": "node scripts/start-heroku.js",
    "start:backend": "cd strapi-backend && yarn start",
    "start:frontend": "cd nuxt-frontend && yarn start",
    "dev:backend": "cd strapi-backend && yarn develop",
    "dev:frontend": "cd nuxt-frontend && yarn dev",
    "heroku-postbuild": "yarn build"
  },
  "engines": {
    "node": "23.x",
    "yarn": ">=1.22.0"
  },
  "keywords": [
    "coffee",
    "ecommerce",
    "strapi",
    "nuxt"
  ],
  "license": "MIT"
}
